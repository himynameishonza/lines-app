#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format (optional - enforces conventional commits)
commit_msg=$(cat "$1")

# Pattern for conventional commits
pattern="^(feat|fix|docs|style|refactor|perf|test|chore)(\(.+\))?: .{1,}"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message should follow conventional commits:"
  echo "  type(scope?): description"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, chore"
  echo ""
  echo "Examples:"
  echo "  feat: add hexagram search"
  echo "  fix(readings): correct date formatting"
  echo "  docs: update README"
  echo ""
  exit 1
fi
